<% u = @currentUser() %>
<blockquote>
    <p class="text-info">
    <% if u.type is "AppAdmin": %>
      Application Notifications
    <% else if u.type is "OrgAdmin": %>

      <% if u.role is "account_manager": %>
        Organisation Notifications
      <% else: %>
        My Notifications
      <% end %>

	<% else: %>
	 Notifications
	<% end %>
    </p>          
</blockquote>