<% isEditableForm = @isCreatedByUser(@created_by) %>

<blockquote id="edit-form-header">

    <p class="text-info">
    <% if isEditableForm: %>Editing<% else: %>Showing<% end %> 
    Organisation: <%= @title %></p>
    <% if isEditableForm: %>
    	<small class="text-info">hover over fields for help</small>
    <% end %>   
         
</blockquote>   