<div id="form-content-region"></div>
<% if @footer: %>
<div id="form-foot" class="row-fluid">
<legend>
	<% if @buttons: %>
		<div id="form-btn-wrapper">
			<% for button in @buttons: %>
				<button data-form-button="<%= button.type %>" class="<%= button.className %>"><%= button.text %></button>
			<% end %>
		</div>
		<% end %>
 </legend>   
</div>
<% end %>